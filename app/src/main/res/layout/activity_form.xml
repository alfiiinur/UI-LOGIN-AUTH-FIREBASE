<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        tools:context=".FormAct">




        <ImageView android:layout_width="match_parent" android:layout_height="375dp"
                   android:id="@+id/shp_ungu"
                   android:src="@drawable/ellipse_79"
                   android:layout_marginTop="-90dp"


                   android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"/>
        <ImageView android:layout_width="216dp" android:layout_height="144dp"
                   android:src="@drawable/ellipse_78"
                   android:layout_marginLeft="-90dp"

        />

        <ImageView android:layout_width="173dp" android:layout_height="32dp"
                   android:id="@+id/logo"
                   android:src="@drawable/logo_1"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="20dp"
        />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/t1"
              android:text="Register in here!!"
              android:textColor="@color/white"
              android:textSize="25sp"
              android:textStyle="bold"
              android:layout_marginStart="30dp"
              android:layout_marginTop="-150dp"
              android:layout_below="@+id/shp_ungu"
    />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/t2"
              android:text="letâ€™s improve your healthy and body"
              android:textColor="@color/white"
              android:textSize="20sp"
              android:layout_marginStart="30dp"
              android:layout_below="@+id/t1"



              />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/t3"
              android:text="You Have Account ?"
              android:textColor="@color/anon_black"
              android:textSize="15sp"
              android:layout_marginStart="30dp"
              android:layout_below="@+id/t2"
              android:layout_marginTop="10dp"

    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/t4"
              android:text="Login"
              android:textColor="@color/white"
              android:textSize="15sp"
              android:layout_marginStart="10dp"
              android:layout_below="@+id/t2"
              android:layout_marginTop="10dp"
              android:layout_toRightOf="@+id/t3"
              android:textStyle="bold"
              android:onClick="openLoginRegis"


    />


    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/bg1"
               android:src="@drawable/reg_white"
               android:layout_below="@+id/t2"
               android:layout_marginTop="45dp"


           />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:id="@+id/linForm"
                  android:layout_below="@+id/t2" android:layout_marginTop="70dp" android:padding="10dp">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/username"
                  android:text="Username"
                  android:layout_marginStart="20dp"

        />

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:boxStrokeColor="@color/grey"
                                                               android:textColorHint="@color/grey"
                                                               android:layout_marginBottom="15dp"

                                                               app:startIconDrawable="@drawable/baseline_assignment_ind_24"


        >

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:id="@+id/fusername"
                                                                     android:hint="Username"
                                                                     android:layout_marginStart="20dp"
                                                                     android:layout_marginEnd="20dp"
                                                                     android:paddingStart="40dp"





                                                                     />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/Email"
                  android:text="Email"
                  android:layout_marginStart="20dp"

        />

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:boxStrokeColor="@color/grey"
                                                               android:textColorHint="@color/grey"
                                                               android:layout_marginBottom="15dp"
                                                               app:startIconDrawable="@drawable/baseline_alternate_email_24"
        >

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:id="@+id/femail"
                                                                     android:hint="Email"
                                                                     android:inputType="textEmailAddress"
                                                                     android:layout_marginStart="20dp"
                                                                     android:layout_marginEnd="20dp"
                                                                     android:paddingStart="40dp"



            />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/notelp"
                  android:text="Nomor Telepon"
                  android:layout_marginStart="20dp"

        />

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:boxStrokeColor="@color/grey"
                                                               android:textColorHint="@color/grey"
                                                               android:layout_marginBottom="15dp"
                                                               app:startIconDrawable="@drawable/baseline_call_24"
        >

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:id="@+id/ftelp"
                                                                     android:hint="Nomor Telepon"
                                                                     android:inputType="phone"
                                                                     android:layout_marginStart="20dp"
                                                                     android:layout_marginEnd="20dp"
                                                                     android:paddingStart="40dp"



            />


        </com.google.android.material.textfield.TextInputLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/password"
                  android:text="Password"
                  android:layout_marginStart="20dp"

        />

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:boxStrokeColor="@color/grey"
                                                               android:textColorHint="@color/grey"
                                                               android:layout_marginBottom="15dp"
                                                               app:startIconDrawable="@drawable/baseline_admin_panel_settings_24"
                                                               app:endIconMode="password_toggle"
        >

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:id="@+id/fpassword"
                                                                     android:hint="Password"
                                                                     android:inputType="textPassword"
                                                                     android:layout_marginStart="20dp"
                                                                     android:layout_marginEnd="20dp"
                                                                     android:paddingStart="40dp"



            />


        </com.google.android.material.textfield.TextInputLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/retakpass"
                  android:text="Retake Password"
                  android:layout_marginStart="20dp"


        />

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:boxStrokeColor="@color/grey"
                                                               android:textColorHint="@color/grey"
                                                               android:layout_marginBottom="15dp"
                                                               app:startIconDrawable="@drawable/baseline_admin_panel_settings_24"
                                                               app:endIconMode="password_toggle"
        >

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:id="@+id/fretake"
                                                                     android:hint="Reatek Password"
                                                                     android:inputType="textPassword"
                                                                     android:layout_marginStart="20dp"
                                                                     android:layout_marginEnd="20dp"
                                                                     android:paddingStart="40dp"



            />


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/btnRegis"
            android:text="Register"
            android:backgroundTint="@color/main"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"


            android:layout_below="@+id/linForm"

            />



</RelativeLayout>