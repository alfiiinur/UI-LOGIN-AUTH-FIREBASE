<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main"
        tools:context=".LoginAct">



    <ImageView android:layout_width="match_parent" android:layout_height="375dp"
               android:id="@+id/shp_ungu"
               android:src="@drawable/ellipse_79"
               android:layout_marginTop="-90dp"


               android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"/>
    <ImageView android:layout_width="216dp" android:layout_height="144dp"
               android:src="@drawable/ellipse_78"
               android:layout_marginLeft="-90dp"

    />

    <ImageView android:layout_width="173dp" android:layout_height="32dp"
               android:id="@+id/logo"
               android:src="@drawable/logo_1"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="20dp"
    />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/text1"
              android:text="Login In here!!"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="30sp"
              android:layout_marginTop="30dp"
              android:layout_marginLeft="30dp"
              android:layout_below="@id/shp_ungu"



    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/text2"
              android:textSize="15sp"
              android:text="let’s improve your healthy and body"
              android:textColor="@color/white"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="5dp"
              android:textStyle="bold"

              android:layout_below="@+id/text1"

    />

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/bg"
               android:src="@drawable/white_bg"


               android:layout_below="@+id/text2"

               android:layout_marginTop="20dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical" android:id="@+id/linForm"
                  android:layout_below="@+id/text2" android:layout_marginTop="70dp" android:padding="10dp">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/emaila"
              android:text="Email"
              android:layout_marginStart="20dp"

    />

    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           app:boxStrokeColor="@color/grey"
                                                           android:textColorHint="@color/grey"
                                                           android:layout_marginBottom="15dp"

                                                           app:startIconDrawable="@drawable/baseline_assignment_ind_24"


    >

        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:id="@+id/flemail"
                                                                 android:hint="Email"
                                                                 android:inputType="textEmailAddress"
                                                                 android:layout_marginStart="20dp"
                                                                 android:layout_marginEnd="20dp"
                                                                 android:paddingStart="40dp"





        />
    </com.google.android.material.textfield.TextInputLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/pass"
                  android:text="Password"
                  android:layout_marginStart="20dp"

        />


        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:boxStrokeColor="@color/grey"
                                                               android:textColorHint="@color/grey"
                                                               android:layout_marginBottom="15dp"
                                                               app:startIconDrawable="@drawable/baseline_admin_panel_settings_24"
                                                               app:endIconMode="password_toggle"
        >

            <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:id="@+id/flpass"
                                                                     android:hint="Password"
                                                                     android:inputType="textPassword"
                                                                     android:layout_marginStart="20dp"
                                                                     android:layout_marginEnd="20dp"
                                                                     android:paddingStart="40dp"



            />


        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/btnRegis"
            android:text="Login"
            android:backgroundTint="@color/main"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"


            android:layout_below="@+id/linForm"

    />

    <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRegis"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/try2"
                  android:text="Don’t have account?"

                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/btnRegis"


        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/texttry"
                  android:text="Register"
                  android:layout_below="@+id/btnRegis"
                  android:layout_toRightOf="@+id/try2"
                  android:layout_marginLeft="5dp"
                  android:textColor="@color/button"
                  android:onClick="openRegistrationActivity"

        />



    </LinearLayout>

</RelativeLayout>